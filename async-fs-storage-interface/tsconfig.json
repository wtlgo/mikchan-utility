{
    "include": ["src"],
    "compilerOptions": {
        "moduleResolution": "Node",
        "target": "ESNext",
        "declaration": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "outDir": "dist",
        "emitDeclarationOnly": true
    }
}
